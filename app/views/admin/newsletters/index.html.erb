<%= form_for [:admin, @newsletter], html: {class: 'form well'} do |f| %>
  <div class="mb2">
    <%= f.label :subject, class: 'form-label' %>
    <%= f.text_field :subject, class: 'field-light' %>
  </div>
  <div class="mb2">
    <%= f.label :body, class: 'form-label' %>
    <%= f.text_area :body, class: 'field-light', rows: 12 %>
  </div>
  <div class="py1 border-top right-align">
    <p class="gray-2">
      The next newsletter will be sent in <%= time_ago_in_words(@newsletter.next_published_at) %>.
    </p>
    <%= f.submit 'Preview & queue newsletter', class: %w(button button-primary) %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Created</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @newsletters.each do |newsletter| %>
      <tr class="
          <%= 'gray-2' if newsletter.cancelled? %>
          <%= 'active' if newsletter.published? %>
        ">
        <td><strong><%= newsletter.subject %></strong></td>
        <td><%= truncate(newsletter.body, length: 180) %></td>
        <td><%= newsletter.created_at %></td>
        <td>
          <% if newsletter.published? %>
            <%= newsletter.published_at %>
          <% elsif newsletter.cancelled? %>
            <%= newsletter.cancelled_at %>
          <% else %>
            <%= link_to [:admin, newsletter], method: :delete, confirm: 'Are you sure you want to cancel this newsletter?', class: 'button button-red' do %>
              <span class="glyphicon glyphicon-ban-circle"></span>
              Cancel
            <% end %>
            <%= link_to [:admin, newsletter, :publish], method: :patch, confirm: 'Continue sending email to ALL USERS?', class: 'button button-default' do %>
              <span class="glyphicon glyphicon-share-alt"></span>
              Send Now
            <% end %>

          <% end %>
        </td>
        <td>
          <% if !newsletter.published? %>

          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
