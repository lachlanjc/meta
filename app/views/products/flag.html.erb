<% title @product.name, @product.pitch %>

<% if @product.flagged? %>
  <h1><%= @product.name %> is already flagged.</h1>
<% else %>
  <h2>Flag product reason</h2>
  <br/>

  <%= form_for product_flag_url(@product) do |f| %>
    <%= f.text_area :personal_message, placeholder: "Reason for flagging", rows: 10 %>
    <div class='py1 border-top right-align'>
      <button class='button sm-button button-primary') data-disable-with="Updating..."> Update</button>
    </div>
  <% end %>

<% end %>
