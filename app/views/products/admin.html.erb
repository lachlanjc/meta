<div class="sheet-body">
  <% if @product.flagged? %>
    <span class="button button-red sm-button button-block button-disabled mb2" href="#">Product Flagged</span>
  <% else %>
    <a class="button button-red sm-button button-block mb1" href="<%= product_flag_path(@product)%>">Flag Product</a>
  <% end %>
</div>
