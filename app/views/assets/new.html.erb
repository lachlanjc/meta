<% activate_nav!(:assets) %>
<% title 'Upload an Asset', @product.name %>

<div class="container">
  <div class="sm-col-6 mx-auto">
    <%= form_for([@asset.product, @asset], class: 'form') do |f| %>
      <%= react_component 'FormUploader', inputName: 'asset[attachment_id]' %>
      <div class="mb2">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'field-light' %>
      </div>
      <div class="py1 border-top right-align">
        <button class="button button-primary" type="submit">Upload asset</button>
      </div>
    <% end %>
  </div>
</div>
