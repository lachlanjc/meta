<% title 'New Post', @post.product.name %>
<% activate_nav! :updates %>

<div class="page-header sheet-header">
  <% if current_user.staff? %>
    <% if @post.flagged? %>
      <button class="button button-disabled pull-right">Post already flagged</button>
    <% else %>
      <%= form_for [@post.product, @post] do |f| %>
        <%= f.hidden_field :flagged_at, value: Time.now %>
        <%= f.submit 'Flag this post', class: %w(button button-red pull-right) %>
      <% end %>
    <% end %>
  <% end %>

  <h1 class="page-header-title">Editing <q><%= @post.title %></q></h1>
</div>

<div class="sheet-body">
  <div class="row">
    <div class="md-col-9 sm-col-9">
      <%= form_for [@post.product, @post] do |f| %>
        <div class="mb2">
          <%= f.label :title, 'Post title', class: 'form-label' %>
          <%= f.text_field :title, class: 'field-light' %>
          <p class="gray-2 h5 py1 mb1 block">
            <strong>URL:</strong>
            <%= product_post_url(@post.product, @post) %>
          </p>
        </div>
        <div class="mb2">
          <%= f.text_field :summary, class: 'field-light', placeholder: 'Tweet sized summary' %>
        </div>
        <div class="mb2">
          <%= f.text_area :body, class: 'field-light', rows: 8, placeholder: 'Post body' %>
        </div>

        <div class="py1 border-top right-align">
          <%= f.submit 'Update', class: %w(button button-primary) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
